<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaysUntilNewYear" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/whiteday</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/whiteday</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="PLASHKA">
        <item name="android:background">@color/plashkaday</item>
    </style>
    <style name="FONE">
        <item name="android:background">@drawable/foneday</item>
    </style>
    <style name="TEXTNY">
        <item name="android:textColor">@color/whiteday</item>

    </style>
    <style name="TIMEPLASHKA">
        <item name="android:background">@drawable/plashkadaytime</item>
    </style>
    <style name="BUTTON">
